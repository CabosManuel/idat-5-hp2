@model IEnumerable<MVC_CarritoCompra.Models.Carrito>

@{
    ViewBag.Title = "Pagar_Carrito";
}

<h2>Pagar_Carrito</h2>

@using (Html.BeginForm())
{
    <p> Seleccione Cliente: @Html.DropDownList("cod", (SelectList)ViewBag.CLIENTES,
                 "Seleccione", new { @class="form-control" })
    <br/>    
    <input type="submit" value="Pagar Carrito"> | 
    @Html.ActionLink("Ver Carrito", "Ver_Carrito_Compra")
        
    </p>
}
<table class="table">
    <tr>
        <th>Foto</th>
        <th>
            @Html.DisplayNameFor(model => model.nombre)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.precio)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.cantidad)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.importe)
        </th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            <img src="@Url.Content("~/Imagenes/"+ item.codigo +".jpg")"
                 style="width:60px;height:60px;" />
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.nombre)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.precio)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.cantidad)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.importe)
        </td>
    </tr>
}

</table>

<br/>
@if (ViewBag.MENSAJE !=null)
{ 
    <div class="alert alert-danger">
        @ViewBag.MENSAJE
    </div>
}