@model IEnumerable<MVC_CarritoCompra.Models.Articulos>

@{
    ViewBag.Title = "Listar_Articulos";
}

<h2>Listar_Articulos</h2>

@using (Html.BeginForm())
{
    <p>
        Nombre del Articulo: <input type="text" name="nombre" value="@ViewBag.NOMBRE">
        <input type="submit" value="Consultar por Nombre" class="btn btn-success"> | 
        @Html.ActionLink("Ver Compras","Ver_Carrito_Compra")        
    </p>
}


<table class="table">
    <tr>
        <th>Foto</th>
        <th>Nombre del Articulo</th>
        <th>Unidad Medida</th>
        <th>Precio</th>
        <th>Stock</th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            <img src="@Url.Content("~/Imagenes/"+ item.art_cod +".jpg")" 
                 style="width:60px;height:60px;" />
        </td>
        <td>@item.art_nom</td>
        <td>@item.art_uni</td>
        <td>@item.art_pre.ToString("N2")</td>
        <td>@item.art_stk</td>
        <td>
            @Html.ActionLink("Seleccionar", "Seleccionar_Articulo",               
                                new { cod = item.art_cod })
        </td>
    </tr>
}

</table>
