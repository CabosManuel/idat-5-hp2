@model IEnumerable<ProyectoEC1CabosManuel.Models.Entradas>

@{
    ViewBag.Title = "Lista_Entradas";
}

<h2>Lista_Entradas</h2>

<p>
    @Html.ActionLink("Nueva Entrada", "Crear_Entrada") |
    @Html.ActionLink("Salir", "Salir")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.NroEntrada)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.FechaEntrada)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.NombrePelicula)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Horario)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Precio)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Cantidad)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Pagado)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Importe)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.NroEntrada)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.FechaEntrada)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.NombrePelicula)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Horario)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Precio)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Cantidad)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Pagado)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Importe)
        </td>
        <td>
            @Html.ActionLink("Detalle", "Detalle_Entrada", new { nEntrada = item.NroEntrada }) |
            @Html.ActionLink("Eliminar", "Eliminar_Entrada", new { entrada = item.NroEntrada })
        </td>
    </tr>
}

</table>
